<% layout('layouts/boilerplate') -%>
<script>
    let lat = Number("<%= listing.geometry.coordinates[1]%>");
    let lng = Number("<%= listing.geometry.coordinates[0] %>");
    let title = "<%=listing.title%>";
    let address = "<%=listing.location%>, <%=listing.country%>";

</script>

    <div class="row mt-3">
        <div class="col-8 offset-3">
    <h3><b><%=listing.title%></b><br>
    </h3>
    <br>
    </div>
    <div class="card show-card col-6 offset-3 listing-card">
        <img src="<%=listing.image.url%>" class="card-img-top show-img" alt="...">
        <div class="card-body">
          <p class="card-text">
            
                <%=listing.description%><br>
                &#8377; <%=listing.price.toLocaleString('en-IN')%><br>
                <%=listing.location%><br>
                <%=listing.country%><br>
    
          </p>
          <p class="card-text"><i><b>Owned by</b> <%=listing.owner.username%></i></p>
        </div>
    </div>
    <br><br><br>
    <% if(currentUser && currentUser._id.equals(listing.owner._id)) { %>
    <div class="btns">
        <a class="btn btn-dark col-1 edit-btn offset-3" href="/listings/<%=listing._id%>/edit">Edit</a>
                <form method="POST" action="/listings/<%=listing._id%>?_method=DELETE">
            <button class="btn btn-dark offset-4 ">Delete</button>
        </form>
    </div>
    <% } %>
    
    <% if(currentUser) { %>
     <div class="add-review col-8 offset-3 mb-3">
        <hr>
        <h4>Leave a review</h4>
        <form action="/listings/<%= listing._id %>/reviews" method="post" novalidate class="needs-validation">
            <div class="ratings mb-3 mt-3">
                <fieldset class="starability-basic">
                <legend>Rating:</legend>
                <input type="radio" id="no-rate" class="input-no-rate" name="rating" value="0" checked aria-label="No rating." />
                <input type="radio" id="rate1" name="Review[rating]" value="1" />
                <label for="rate1">1 star.</label>

                <input type="radio" id="rate2" name="Review[rating]" value="2" />
                <label for="rate2">2 stars.</label>

                <input type="radio" id="rate3" name="Review[rating]" value="3" />
                <label for="rate3">3 stars.</label>

                <input type="radio" id="rate4" name="Review[rating]" value="4" />
                <label for="rate4">4 stars.</label>

                <input type="radio" id="rate5" name="Review[rating]" value="5" />
                <label for="rate5">5 stars.</label>

                <span class="starability-focus-ring"></span>
                </fieldset>
            </div>
            <div class="comment mb-3 mt-3">
                <label class="form-label" for="comment">Comment</label>
                <textarea class="form-control" required cols="100" rows="5" name="Review[comment]" id="comment"></textarea>
                <div class="invalid-feedback">Comment can't be empty!</div>
            </div>
            <button class="btn btn-outline-dark">Submit</button>
        </form>
     </div>
    <% } %>
     <% if(listing.reviews.length !== 0) { %>
     <div class="show-reviews col-8 offset-3 mb-3">
        <hr>
        <div class="row mt-4">
            <h4>All Reviews</h4>

            <% for(review of listing.reviews) {%>
                <div class="review card col-5 mb-3 me-5">
                    <div class="card-body">
                        <h5 class="card-title">@<%= review.author.username%></h5>
                        <p class="starability-result" data-rating="<%= review.rating %>">
                            Rated:  <%= review.rating %> stars
                        </p>
                        <hr>
                        <p class="card-text"><%= review.comment %></p>
                
                        <% if(currentUser && currentUser._id.equals(review.author._id)) { %>
                        <form class="mb-3" method="post" action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE">
                            <button class="btn btn-sm btn-dark">Delete</button>
                        </form>
                        <% } %>

                    </div>

                </div>
            <% } %>
        </div>
                           
        </div>
       <% } %> 
    <div class="col-8 offset-3 mb-3 map-div">
                <hr>
        <H4>Where You'll Be</H4>
        <div id="map" ></div>
    </div>
</div>
<br><br>
    <script src="/js/map.js"></script>


    
